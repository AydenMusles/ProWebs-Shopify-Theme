<span class="input-group-btn news-letter"> <section class="section section--newsletter m0 py3 color--newsletter-content bg--newsletter-accent">
  <div class="wrapper section--wrapper text-align--center px2">
    <div class="grid">
    <div class="grid__item sm--one-whole md--one-whole lg--one-whole dt--one-whole py3 newsletter_padding">
      <h3 class="f--title font-size--xl">{{ section.settings.title | escape }}</h3>
      <p class="f--main font-size--s lg--font-size--m">{{ section.settings.text | escape }}</p>

      <div class="newsletter__form mx--auto mt3">
        
    {% comment %}  {% form 'customer' %}
        {{ form.errors | default_errors }}
        {% if form.posted_successfully? %}
          <p class="form--success f--main">{{ 'general.newsletter_form.confirmation' | t }}</p>
        {% else %}
          <div class="input-group">

            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="grid__item sm--one-whole md--one-whole lg--one-whole dt--one-whole" style="padding:0;">
             <input type="text" id="fname"
                    class="grid__item sm--one-whole md--one-whole lg--one-half dt--one-half input-group1 input-underline input-underline--secondary-overlay f--main color--newsletter-content"
                    placeholder="First name">
                   

                   <input type="text" id="lname"
                     class="grid__item sm--one-whole md--one-whole lg--one-half dt--one-half input-group1 input-underline input-underline--secondary-overlay f--main color--newsletter-content"
                     placeholder="Last name">
                   <input type="hidden" name="">
            </div>
             <br>
             <br>
            <span class="input-group-btn">
              <input type="email"
              name="contact[email]"
              id="Email"
              class="grid__item sm--one-whole md--one-whole lg--seven-tenths dt--seven-tenths input-group-field input-underline input-underline--secondary-overlay f--main color--newsletter-content"
              value="{% if customer %}{{ customer.email }}{% endif %}"
              placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}"
              autocorrect="off"
              autocapitalize="off" style="padding:0;">
            
              <button type="submit" class="grid__item sm--one-whole md--one-whole lg--three-tenths dt--three-tenths btn newsletter__submit bg--button" name="commit" id="Subscribe">
                <span class="newsletter__submit-text--large">{{ 'general.newsletter_form.submit' | t }}</span>
              </button>
              </span>
          </div>
        {% endif %}
      {% endform %} {% endcomment %}
        
        <script async data-uid="856d581d34" src="https://f.convertkit.com/856d581d34/037b1f1d2d.js"></script>

      </div>
    </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Sign up to our newsletter"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Receive special offers and first look at new products."
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
<style>
  .newsletter_padding
  {
    padding-left:28px;
  }
  input[type='email']::-moz-placeholder
  {
    color: #fff !important;
    opacity:1;
  }
  input[type='email']::-webkit-input-placeholder {
    color: #fff !important;
    opacity:1;
  }
  input[type='text']::-moz-placeholder
  {
    color: #fff !important;
    opacity:1;
  }
  input[type='text']::-webkit-input-placeholder
  {
    color: #fff !important;
    opacity:1;
  }
 
  .input-height{height:37px;}
  
  @media only screen and (max-width:767px)
    {
      .btn.newsletter__submit {float:none;}
    }
  @media only screen and (min-width:768px)
    { 
      .btn.newsletter__submit {float:right;}
      input#drip-last-name {margin-left: 10px; width:48%;}
      input#drip-first-name {margin-right:10px; width:48%;}
    }
  @media only screen and (min-width:481px) and (max-width:767px)
    {
      .newsletter__form {
        max-width: 360px;
         width: 100%;}
